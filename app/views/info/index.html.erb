  
  <div class="row">
    <div class="col s12 m3">
      <% @machines.each do |machine| %>
        <div class="card">
          <div class="card-image">
            <img src="<%= machine.image&.url %>">
            <span class="card-title"><%= machine.model %></span>
          </div>
          <div class="card-content">
            <span class="card-title"><%= I18n.t("machine_types.#{machine.machine_type}") %></span>
            <p><%= machine.title %></p>
          </div>
          <div class="card-action">
            <a href="<%= info_path(machine.id) %>"> <%= I18n.t(:detail) %></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
